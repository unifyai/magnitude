{
    "compilerOptions": {
      "target": "ESNext",
      "module": "esnext",
      "moduleResolution": "bundler",
      "declaration": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "include": [
      "src"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "**/*.test.ts"
    ]
}
